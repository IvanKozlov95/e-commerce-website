extends layout

block content
	#content
		form#client-form(action='/users/register' method='post').form-signin
			fieldset
			label(for='username').sr-only Name
			input(type='text' name='name' placeholder='Your Name').form-control
			label(for='password').sr-only Password
			input(type='password' name='password' placeholder='Your Password').form-control
			button(type='Login' class='btn btn-lg btn-primary btn-block') Sign Up
			h4
				span(class='label label-danger')= messagep
