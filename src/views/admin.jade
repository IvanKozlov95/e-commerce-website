extends layout

block content
  .row
    .col-md-6
      h2 Articles
      each item in articles
        li= item
    .col-md-6
      h3 Add article
      form(action="/article", method="post")
        div.form-group
          div.input
            span.label Name
            input(type="text", name="name").form-control

        div.form-group
          div.input
            span.label Price
            input(type="text", name="price").form-control

        div.form-group
          div.input
            span.label Categories
            input(type="text", name="categories").form-control

        div.form-group
          div.actions
              input(type="submit", value="add").form-control.btn.btn-primary